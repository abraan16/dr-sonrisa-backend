generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [vector]
}

model Patient {
  id        String   @id @default(uuid())
  phone     String   @unique
  name      String?
  pushName  String?
  metadata  Json?
  tags      String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Lead Follow-up System
  status              String   @default("lead") // "lead" | "patient" | "stopped"
  followUpStatus      String   @default("pending") // "pending" | "completed" | "stopped"
  followUpCount       Int      @default(0)
  lastInteractionAt   DateTime @default(now())

  // Human Handoff System
  botStatus           String   @default("active") // "active" | "paused"
  handoffAt           DateTime? // When human took over
  lastHumanResponseAt DateTime? // Last time human responded

  // Multi-Tenant (OPTIONAL for backward compatibility)
  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id])

  interactions Interaction[]
  appointments Appointment[]

  @@index([organizationId])
  @@map("patients")
}

model Interaction {
  id        String   @id @default(uuid())
  patientId String
  patient   Patient  @relation(fields: [patientId], references: [id])
  role      String // 'user' | 'assistant' | 'system'
  content   String
  mediaType String   @default("text") // 'text' | 'audio'
  // embedding Unsupported("vector(1536)")? // Uncomment when extension is enabled in DB
  createdAt DateTime @default(now())

  // Multi-Tenant (OPTIONAL)
  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id])

  @@index([organizationId])
  @@map("interactions")
}

model Appointment {
  id            String   @id @default(uuid())
  patientId     String
  patient       Patient  @relation(fields: [patientId], references: [id])
  startTime     DateTime
  endTime       DateTime
  status        String   @default("scheduled") // 'scheduled', 'cancelled', 'completed'
  googleEventId String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Multi-Tenant (OPTIONAL)
  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id])

  @@index([organizationId])
  @@map("appointments")
}

model Promotion {
  id           String   @id @default(uuid())
  service      String   // e.g., 'blanqueamiento', 'limpieza', 'general'
  description  String   // Detailed description
  discountText String?  // e.g., '20% OFF'
  validFrom    DateTime?
  validUntil   DateTime?
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Multi-Tenant (OPTIONAL)
  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id])

  @@index([organizationId])
  @@map("promotions")
}

model ClinicAlert {
  id        String   @id @default(uuid())
  type      String   // 'closure', 'warning', 'info'
  message   String
  startDate DateTime
  endDate   DateTime
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Multi-Tenant (OPTIONAL)
  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id])

  @@index([organizationId])
  @@map("clinic_alerts")
}

model SystemSetting {
  id          String   @id @default(uuid())
  key         String   // e.g., 'prices', 'hours', 'location'
  value       String   // The content text
  description String?  // Admin-friendly description
  updatedAt   DateTime @updatedAt

  // Multi-Tenant (OPTIONAL) - key is no longer globally unique
  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id])

  @@unique([key, organizationId]) // Unique per organization
  @@index([organizationId])
  @@map("system_settings")
}

// ============================================
// NEW MULTI-TENANT MODELS
// ============================================

model Organization {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique // URL-friendly identifier
  plan      String   @default("free") // 'free', 'pro', 'enterprise'
  status    String   @default("active") // 'active', 'suspended', 'cancelled'
  
  // Limits based on plan
  maxConversations Int @default(100)
  maxUsers         Int @default(1)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  patients         Patient[]
  appointments     Appointment[]
  interactions     Interaction[]
  promotions       Promotion[]
  alerts           ClinicAlert[]
  settings         SystemSetting[]
  whatsappInstances WhatsappInstance[]
  users            OrganizationUser[]

  @@map("organizations")
}

model WhatsappInstance {
  id             String   @id @default(uuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  
  instanceName   String   @unique // Evolution API instance name
  apiKey         String?  // Optional: if each org has their own Evolution API
  isActive       Boolean  @default(true)
  
  createdAt      DateTime @default(now())

  @@index([organizationId])
  @@map("whatsapp_instances")
}

model OrganizationUser {
  id             String   @id @default(uuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  
  email          String   // User email (from Supabase Auth)
  role           String   @default("admin") // 'admin', 'viewer'
  
  createdAt      DateTime @default(now())

  @@unique([organizationId, email])
  @@index([organizationId])
  @@map("organization_users")
}
